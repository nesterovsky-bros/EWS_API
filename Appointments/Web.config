    <!-- A service account user e-mail: -->
    <add key="ExchangeUserName" value="anesterovsky@modernsystems.com" />
    <!-- The service account user's password: -->
    <add key="ExchangePassword" value="" />
    <!-- The Office 365 server URL: -->
